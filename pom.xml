<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>uk.gov.justice</groupId>
        <artifactId>maven-framework-parent-pom</artifactId>
        <version>1.12.2</version>
    </parent>

    <groupId>uk.gov.justice.metrics</groupId>
    <artifactId>metrics</artifactId>
    <version>1.2.1</version>
    <packaging>pom</packaging>

    <modules>
        <module>metrics-interceptor</module>
        <module>metrics-servlet</module>
    </modules>

    <properties>
        <cpp.repo.name>metrics</cpp.repo.name>

        <common-bom.version>1.26.0</common-bom.version>
        <framework-api.version>2.0.3</framework-api.version>
        <microservice-framework.version>4.1.2</microservice-framework.version>

        <test-utils.version>1.17.2</test-utils.version>
        <utilities.version>1.13.1</utilities.version>
    </properties>

    <scm>
        <connection>${cpp.scm.connection}</connection>
        <developerConnection>${cpp.scm.developerConnection}</developerConnection>
        <url>${cpp.scm.url}</url>
    </scm>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>uk.gov.justice</groupId>
                <artifactId>maven-common-bom</artifactId>
                <version>${common-bom.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>
